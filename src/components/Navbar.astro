---
import todo from "../images/icon-todo.svg";
import calendar from "../images/icon-calendar.svg";
import reminders from "../images/icon-reminders.svg";
import planning from "../images/icon-planning.svg";
import snap from "../images/logo.svg";

const navItems = {
  "Features": {
    "Todo List": ["./Todo.html", {todo}],
    "Calendar": ["./Calendar.html", {calendar}],
    "Reminders": ["./Reminders.html", {reminders}],
    "Planning": ["./Planning.html", {planning}]
  },
  "Company": {
	"History" : ["./History.html"],
	"Our Team": ["./Team.html"],
	"Blog" : ["./Blog.html"]
},
  "Careers": "./Careers.html",
  "About": "./About.html"
};
---




<nav class="flex justify-between items-center w-full px-4 py-4 ">
    <!-- Left Side: Logo -->
    <div class="flex items-center">
        <a href="#" class="flex items-center">
            <img src={snap.src} class="h-7 md:h-8" alt="Snap logo" />
        </a>
    </div>

    <!-- Middle Section: Links (Hidden on mobile, shown on desktop) -->
    <div class="hidden md:flex items-center space-x-6">
        <a class="hover:text-[#141414] text-[#696969]" href="./Features.html">Features</a>
        <a class="hover:text-[#141414] text-[#696969]" href="./Company.html">Company</a>
        <a class="hover:text-[#141414] text-[#696969]" href="./Careers.html">Careers</a>
        <a class="hover:text-[#141414] text-[#696969]" href="./About.html">About</a>
    </div>

    <!-- Right Side: Buttons (Hidden on mobile, shown on desktop) -->
    <div class="hidden md:flex items-center space-x-4">
        <button class="hover:text-[#141414] text-[#696969]">Login</button>
        <button class="px-5 py-2 rounded-xl border-2 hover:border-[#141414] border-[#696969]">Register</button>
    </div>

    <!-- Mobile Menu Toggle Button -->
    <div class="md:hidden flex items-center">
        <button id="mobile-menu-toggle" class="focus:outline-none">
            <!-- Hamburger Icon -->
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
    </div>

    <!-- Mobile Sidebar Menu (Hidden by default) -->
    <div id="mobile-menu" class="fixed inset-y-0 right-0 w-[64vw] z-50 transform translate-x-full transition-transform duration-300">
        <div class="flex justify-between items-center p-4">
            <button id="mobile-menu-close" class="focus:outline-none ml-auto">
                <!-- Close Icon (X) aligned to the right -->
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <ul class="flex flex-col items-start pl-8 space-y-4 mt-4">
            <li><a class="hover:text-[#141414] text-[#696969]" href="./Features.html">Features</a></li>
            <li><a class="hover:text-[#141414] text-[#696969]" href="./Company.html">Company</a></li>
            <li><a class="hover:text-[#141414] text-[#696969]" href="./Careers.html">Careers</a></li>
            <li><a class="hover:text-[#141414] text-[#696969]" href="./About.html">About</a></li>
            <li><button class="hover:text-[#141414] text-[#696969] mt-4">Login</button></li>
            <li><button class="px-5 py-2 mt-4 rounded-xl border-2 hover:border-[#141414] border-[#696969]">Register</button></li>
        </ul>
    </div>
</nav>

<script>
    const menuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuClose = document.getElementById('mobile-menu-close');

    menuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('translate-x-full');
        mobileMenu.classList.toggle('translate-x-0');
    });

    menuClose.addEventListener('click', () => {
        mobileMenu.classList.toggle('translate-x-full');
        mobileMenu.classList.toggle('translate-x-0');
    });
</script>




